<h1>Dashboard home</h1>

<h3>Total no. of Order Placed by each user</h3>

<% data_user = {}%>

<% @users.each do |user|%>
	<%if user.username != "admin"%>
		<%data_user[user.username] = Order.where('user_id = ?', user.id).length%>
	<%end%>	
<%end%>

<%=column_chart(data_user)%>

<h3>Income generated by each user</h3>
<%user_income = {}%>
<% @users.each do |user|%>
	<%if user.username != "admin"%>
		<%user_income[user.username] = OrderLineItem.joins(:order).where('orders.user_id = ? ', user.id).sum(:total)%>
	<%end%>	
<%end%>
<%= pie_chart(user_income)%>
