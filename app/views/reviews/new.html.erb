<h2>Add Review</h2>
<%= form_for @review do |f| %>

	
	
	<label>body:</label><br>
	<%= f.text_field :body, autofocus: true%><br>

	<label>rating:</label><br>
	<%= f.text_field :rating%><br>

	<%=f.hidden_field :product_id,value:@product.id%>
	

	<%= f.submit %> or <%= link_to "back", products_path %>

<% end %>